<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Eat da Borgar</h1>
        </div>
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each borgar_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.name}}</pre>
                </div>
            <div class="col-xs-3 text-center">
                <form method="POST" action="/borgars/update?_method=PUT"
                class="button size">
                <input type="hidden" name="borgar_id" type="text"
                value={{this.id}}>
                <br>
                <button type="submit" class="btn btn-default">
                    Devour!</button> 
                </form>
            </div>
            {{/unless}}
            {{/each}}
            </div>
        </div>

    <div class="col-xs-6 text-center" class="task">
        {{#each borgar_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.name}}" readonly>
            {{/if}}
            {{/each}}

    </div>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/borgars/create" method="POST">
            <input type="text" name="borgar_name" class="form-control"
            value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">Submit</button>
            </form>
            <p>Enter a BORGAR you would like to see</p>
        </div>
    </div>
</div>